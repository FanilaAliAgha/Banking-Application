<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


    <androidx.cardview.widget.CardView
        android:layout_height="210dp"
        android:layout_width="210dp"
        android:id="@+id/card1"
        android:foregroundGravity="center"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/cardcolor"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp">


        <ImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:src="@drawable/ic_baseline_person_24" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uname"
        android:layout_marginTop="15dp"
        android:text="User_Name: "
        android:layout_below="@id/card1"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="22sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/uname"
        android:layout_toEndOf="@id/uname"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:textColor="@color/teal_700"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uaccountNo"
        android:layout_marginTop="10dp"
        android:text="Account no: "
        android:layout_below="@id/uname"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="22sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:fontFamily="serif"/>
    <TextView
        android:id="@+id/accountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/uaccountNo"
        android:layout_marginTop="280dp"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:layout_weight="1"
        android:textColorHint="@color/white"
        android:layout_toEndOf="@id/uaccountNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uemail_id"
        android:layout_marginTop="10dp"
        android:text="Email: "
        android:layout_below="@id/uaccountNo"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="22sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/uemail_id"
        android:layout_marginTop="320dp"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:textColorHint="@color/white"
        android:layout_toEndOf="@id/uemail_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/umobile"
        android:layout_marginTop="10dp"
        android:text="Mobile.no: "
        android:layout_below="@id/uemail_id"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="22sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:importantForAutofill="no"
        />

    <TextView
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mobile"
        android:fontFamily="serif"
        android:layout_marginTop="360dp"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:layout_weight="1"
        android:text="  "
        android:textColorHint="@color/white"
        android:layout_toEndOf="@id/umobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ubalance"
        android:layout_marginTop="10dp"
        android:text="Balance: "
        android:layout_below="@id/umobile"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="22sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:fontFamily="serif"/>
    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ubalance"
        android:layout_marginTop="400dp"
        android:layout_weight="1"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:textColorHint="@color/white"
        android:layout_toEndOf="@id/ubalance" />
    <Button
        android:id="@+id/money_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="transfer money"
        android:backgroundTint="@color/teal_700"
        android:layout_below="@id/ubalance"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="50dp"/>


</RelativeLayout>